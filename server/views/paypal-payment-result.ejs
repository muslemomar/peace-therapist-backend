<%- include('_layouts/header', {title: 'Payment Status'}) %>

<style>

    body, html {
        height: 100%;
    }

    * {
        font-family: 'Lato', sans-serif;
    }

    #success-result-text {
        color: #4CAF50;
        font-size: 30px;
    }

    #failed-result-text {
        color: #F44336;
        font-size: 30px;
    }

    #result-img {
        width: 130px;
    }


</style>

<div class="container h-100">

    <div class="row justify-content-center align-items-center h-100">

        <div class="col text-center result-container">

            <% if (paymentResultCode === 1) { %>

                <img id="result-img" src="/static/images/correct.png" class="img-fluid" alt="responsive">

                <p id="success-result-text" class="font-weight-bold text-lg mt-4"><%= paymentResultText %></p>

            <% } else { %>

                <img id="result-img" src="/static/images/cross.png" class="img-fluid" alt="responsive">

                <p id="failed-result-text" class="font-weight-bold text-lg mt-4"><%= paymentResultText %></p>

            <% } %>

        </div>

    </div>

</div>


<%- include('_layouts/footer') %>

